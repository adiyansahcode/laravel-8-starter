root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.blade.php]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.html]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{css,js,scss,styl}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
